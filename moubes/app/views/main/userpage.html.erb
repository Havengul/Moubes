<head>
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      white-space:nowrap;
      padding: 4px 7px 2px;
    }
    .greentext {
      color: #31902B;
    }

    .redtext {
      color: #EB0000;
    }
  </style>
</head>
<% if @can_show == true %>
    <h1><%= @first_name %> <%= @last_name %>'s page</h1>
    <%= link_to 'Home', root_path %><br></br>
    <p>username:    <%= @login %></p><br></br>
    <table>
      <tr>
        <% for i in 0..@big_user_info[0].size-1 %>
            <th bgcolor = "E5E5E5" ><%= @big_user_info[0][i] %>  </th>
        <% end %>
      </tr>
      <% for i in 1..@big_user_info.size-1 %>
          <% if @big_user_info[i][0] == @login %>
              <tr>
                <td><b><a href=<%= "/main/userpage?usernamesearch=" + @big_user_info[i][0] + "&commit=Show" %> ><%= @big_user_info[i][0] %></a></b></td>
                <% for j in 1..@big_user_info[i].size-1 %>
                    <% if j == 1 %>
                        <% if @big_user_info[i][j].to_i >= 5 %>
                            <td class = "greentext" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% elsif  @big_user_info[i][j].to_i > 1 %>
                            <td class = "redtext" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% else %>
                            <td align="center">
                              <%= @big_user_info[i][j] %>
                            </td>
                        <% end %>
                    <% elsif j == 2 %>
                        <% if @big_user_info[i][j] >= 1 %>
                            <td class = "greentext" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% elsif  @big_user_info[i][j] > 0 %>
                            <td class = "redtext" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% else %>
                            <td align="center">
                              <%= @big_user_info[i][j] %>
                            </td>
                        <% end %>
                    <% elsif j >= 3 &&  j <= 22 %>
                        <% if @big_user_info[i][j].to_i >= 25 %>
                            <td class = "greentext" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% elsif @big_user_info[i][j].to_i > 0 %>
                            <td class = "redtext" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% else %>
                            <td align="center">
                              <%= @big_user_info[i][j] %>
                            </td>
                        <% end %>
                    <% elsif j >= 23 && j <= 26 %>
                        <% if @big_user_info[i][j].to_i >= 25 %>
                            <td class = "greentext" bgcolor= "E5E5E5" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% elsif @big_user_info[i][j].to_i > 0 %>
                            <td class = "redtext" bgcolor= "E5E5E5" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% else %>
                            <td bgcolor= "E5E5E5" align="center">
                              <%= @big_user_info[i][j] %>
                            </td>
                        <% end %>
                    <% elsif j == 28 %>
                        <% if @big_user_info[i][j] >= 10 %>
                            <td class = "greentext" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% elsif @big_user_info[i][j] >= 0 %>
                            <td class = "redtext" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% else %>
                            <td align="center">
                              <%= @big_user_info[i][j] %>
                            </td>
                        <% end %>
                    <% elsif j >= 29 && j <= 34 %>
                        <% if @big_user_info[i][j] == 1 %>
                            <td class = "greentext" align="center">
                              <b><%= @big_user_info[i][j] %></b>
                            </td>
                        <% else %>
